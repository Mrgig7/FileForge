# Environment Variables Sample
# Copy this file to .env and fill in your values

# ======================
# Server Configuration
# ======================
PORT=3000
NODE_ENV=development
ALLOWED_CLIENTS=http://localhost:5173
APP_BASE_URL=http://localhost:3000

# ======================
# Database
# ======================
MONGO_CONNECTION_URL=mongodb://localhost:27017/fileforge

# ======================
# Authentication
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY_DAYS=7
SESSION_SECRET=your-session-secret-change-in-production

# ======================
# Cloudinary (File Storage)
# ======================
CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_URL=cloudinary://api-key:api-secret@cloud-name

# ======================
# Redis (Caching & Queues)
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# Email (Optional)
# ======================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASS=your-password

# ======================
# Field-Level Encryption (Task 1)
# ======================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
METADATA_ENCRYPTION_KEY=
METADATA_KEY_VERSION=1

# ======================
# mCaptcha Integration (Task 2)
# ======================
# Setup: docker run -p 7000:7000 mcaptcha/mcaptcha
MCAPTCHA_URL=http://localhost:7000
MCAPTCHA_SITE_KEY=
MCAPTCHA_API_KEY=
CAPTCHA_THRESHOLD=5
CAPTCHA_WINDOW_SECONDS=900

# ======================
# Observability (Optional)
# ======================
OTEL_TRACING_ENABLED=false
OTEL_SERVICE_NAME=fileforge-backend
OTEL_EXPORTER_URL=http://localhost:4318/v1/traces

# ======================
# Virus Scanning (Optional)
# ======================
# For ClamAV: docker run -d -p 3310:3310 clamav/clamav
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
# For VirusTotal (cloud scanning)
VIRUSTOTAL_API_KEY=
